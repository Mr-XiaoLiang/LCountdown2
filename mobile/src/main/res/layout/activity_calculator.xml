                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/bg_calculator_option_type"
                android:gravity="center"
                android:paddingHorizontal="24dp"
                android:text="@string/label_year"
                android:textColor="@color/light_bar_text"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:ignore="SpUsage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/bg_calculator_option_type"
                android:gravity="center"
                android:paddingHorizontal="24dp"
                android:text="@string/label_month"
                android:textColor="@color/light_bar_text"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:ignore="SpUsage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/bg_calculator_option_type"
                android:gravity="center"
                android:paddingHorizontal="24dp"
                android:text="@string/label_week"
                android:textColor="@color/light_bar_text"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:ignore="SpUsage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/bg_calculator_option_type"
                android:gravity="center"
                android:paddingHorizontal="24dp"
                android:text="@string/label_day"
                android:textColor="@color/light_bar_text"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:ignore="SpUsage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="8dp"
